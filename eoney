  <script>
    function closeIframes() {
      document.querySelectorAll('.iframe-container').forEach(el => {
        el.style.display = 'none';
      });
    }

    function openIframe(id) {
      closeIframes(); // Hide all first
      document.getElementById('iframe' + id).style.display = 'block';
    }
  </script>

